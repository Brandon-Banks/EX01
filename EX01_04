#include <iostream>
#include <cmath>
#include <cstdlib>
#include <string>

using namespace std;

void ex04()
{
	const int isize = 3;
	int number[isize];
	int x;
	

	number[0] = 0;
	number[1] = 0;
	number[2] = 0;

	cout << "What is the first integer? " << endl;
	cin >> number[0];

	cout << "What is the second integer? " << endl;
	cin >> number[1];

	cout << "What is the third integer? " << endl;
	cin >> number[2];

	int sum = number[0] + number[1] + number[2];

	cout << "The sum of all the integers is " << sum << endl;

	cout << "Numbers in the array: " << number[0] << ", " << number[1] << ", " << number[2] << endl;

	cout << "Give me a value: " << endl;
	cin >> x;

	double p = (number[2]) * (x ^ (2)) + (number[1] * x) + number[0];

	cout << "The super rad equation answer is " << p << endl;
}

 

int main()
{
	 ex04();

}
